@startuml
title Subsystem User Management

class User {
  -userID: String
  -nama: String
  -email: String
  -password: String
  -role: String
  -NIM_NIP: String
  -fakultas: String
  -statusAktif: Boolean
  +login()
  +logout()
  +updateProfile()
  +resetPassword()
}

class AuthSession {
  -sessionID: String
  -userID: String
  -token: String
  -waktuMulai: DateTime
  -waktuBerakhir: DateTime
  -statusSesi: String
  +createSession()
  +validateSession()
  +expireSession()
}

class Permission {
  -permissionID: String
  -namaPermission: String
  -deskripsi: String
  +cekPermission()
}

' Relationships
User "1" -- "*" AuthSession : has >
User "*" -- "*" Permission : has >

note right of User
  Role: mahasiswa, dosen, 
  staff, petugas_keamanan
end note

note right of AuthSession
  Status: active, expired, 
  logged_out
end note

@enduml